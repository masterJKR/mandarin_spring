<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="Repository.BoardRepository">
  
  	<select id="findByOrderByWriteDateDesc"
  	resultType="Entity.BoardEntity">
  	
  		select * from board order by write_date desc limit 5;
  	
  	</select>
  	
  	<select id="findByOrderByHitDesc"
  	resultType="Entity.BoardEntity">
  		select * from board order by hit desc limit 5;
  	
  	</select>
  	
  
  </mapper>
  
  
  